{
  "manifest_version": 3,
  "name": "API İzleyici",
  "version": "0.1.0",
  "description": "API isteklerini izlemek için DevTools paneli.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "open-monitor": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "API İzleyici ekranını aç"
    }
  },
  "devtools_page": "devtools.html"
}